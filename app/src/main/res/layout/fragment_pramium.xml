<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentPramium"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_background"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/img2"
        android:layout_marginTop="50dp"
        app:riv_corner_radius="100dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông"
            android:textStyle="bold"
            android:id="@+id/tv_Name"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="23dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/deleteName"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="230dp"
            android:src="@drawable/ic_baseline_edit_24"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="20dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_marginLeft="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/gmail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="thonglaanh1011@gmail.com"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="10dp"
                android:textAlignment="center"
                android:text="0"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#ccc"
                android:textSize="9dp"
                android:textAlignment="center"
                android:text="ĐANG THEO DÕI"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="10dp"
                android:textAlignment="center"
                android:text="0"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#ccc"
                android:textSize="9dp"
                android:textAlignment="center"
                android:text="NGƯỜI THEO DÕI"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Danh sách phát"/>
    <ListView
        android:id="@+id/ListViewListIn4"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="ĐĂNG XUẤT"
        android:textSize="10dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:id="@+id/btnLogout"
        android:background="@drawable/custom_btn_dang_ky_sdt"/>
</LinearLayout>
