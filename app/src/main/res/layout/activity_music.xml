<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ActivityMusic">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="11dp"

            android:layout_margin="20dp"
            android:src="@drawable/down" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_marginTop="15dp"
                android:text="ĐANG PHÁT TỪ NGHỆ SĨ "/>
        </LinearLayout>
</LinearLayout>

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:src="@drawable/sontung" />

    <TextView
        android:id="@+id/ten_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chúng ta của hiện tại"
        android:textSize="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:textColor="#fff"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/ten_ngheSi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sơn Tùng M-TP"
        android:textSize="14dp"
        android:layout_marginLeft="30dp"
        android:textColor="#fff" />
    <SeekBar
        android:id="@+id/thoi_gian_chay_v1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:thumbTint="@color/black"
        android:progressTint="#fff"
        android:outlineSpotShadowColor="#fff" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tg_batdau"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="33dp"
            android:text="0:00"
            android:textColor="#ccc"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/tg_ketthuc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0:00"
            android:textSize="12dp"
            android:textColor="#ccc"
            android:layout_marginLeft="270dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/favorite" />

        <ImageView
            android:id="@+id/prev"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/back_button" />

        <ImageView
            android:id="@+id/control_musicplayer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/play1" />

        <ImageView
            android:id="@+id/next_f"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/next_button" />

    </LinearLayout>


</LinearLayout>