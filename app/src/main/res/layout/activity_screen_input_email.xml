<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ActivityLogin.Screen_input_email">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="18dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:onClick="back_email"
            android:layout_marginTop="5dp"
            android:src="@drawable/img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tạo tài khoản"
            android:textColor="#fff"

            android:paddingLeft="83dp"
            android:textSize="22dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email của bạn là gì"
        android:layout_marginTop="80dp"
        android:paddingStart="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="30dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:id="@+id/layout"
        app:errorEnabled="true"
        android:layout_height="60dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:background="#535353"
            android:textColor="#fff"
            android:id="@+id/edtInputEmail"
            android:inputType="textEmailAddress"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:text="Đừng quên nhập địa chỉ email của bạn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_next"
        android:id="@+id/btnNextEmail"
        android:text="Tiếp" />


</LinearLayout>